<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newDrug_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".fragments.detailsFragments.DrugDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:text="Nombre: "
                    android:layout_margin="20dp"></TextView>

                <EditText
                    android:id="@+id/eDrugName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/teal_700"
                    android:hint="Nombre de la droga"
                    android:inputType="text"
                    android:layout_margin="20dp"
                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:text="Calidad (%): "></TextView>

                <EditText
                    android:id="@+id/eDrugQuality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/teal_700"
                    android:hint="Calidad de la droga"
                    android:layout_margin="20dp"
                    android:inputType="number"
                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:text="Precio (€/kg): "></TextView>

                <EditText
                    android:id="@+id/eDrugPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/teal_700"
                    android:hint="Precio de la droga"
                    android:inputType="number"
                    android:layout_margin="20dp"
                    ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:text="Descripción: "
                    android:layout_gravity="center"
                    android:layout_margin="20dp"></TextView>

                <EditText
                    android:id="@+id/eDrugDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/teal_700"
                    android:hint="Descripción de la droga"
                    android:layout_margin="20dp"
                    android:inputType="text"
                    ></EditText>

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/saveDrug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Guardar droga"></android.widget.Button>

            <android.widget.Button
                android:id="@+id/deleteDrug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Eliminar droga"></android.widget.Button>

        </LinearLayout>


    </ScrollView>



</androidx.drawerlayout.widget.DrawerLayout>