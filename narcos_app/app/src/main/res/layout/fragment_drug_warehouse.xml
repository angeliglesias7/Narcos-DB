<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drugWarehouse_layout"
    android:background="@color/background"
    tools:context=".fragments.DrugWarehouseFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/addDrugWarehouse"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add_icon_foreground"></ImageButton>

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/activity_horizontalView1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="horizontal|vertical">

            <TableLayout
                android:id="@+id/drugWarehouseTable"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableLayout>

        </HorizontalScrollView>


    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>